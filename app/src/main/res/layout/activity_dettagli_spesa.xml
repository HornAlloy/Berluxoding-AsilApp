<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.profilo.dettagli.DettagliSpesaActivity">

    <LinearLayout
        android:id="@+id/inserimentoDati"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/lblAmbito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="65dp"
            android:minHeight="30dp"
            android:text="@string/ambito"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtAmbito"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/ambito_esempio"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/lblArticolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="65dp"
            android:minHeight="30dp"
            android:text="@string/articolo"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txArticolo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/articolo_esempio"
            android:minHeight="48dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lblCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="65dp"
            android:minHeight="30dp"
            android:text="@string/costo"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtCosto"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/costo_esempio"
            android:minHeight="48dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/lblData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="95dp"
            android:minHeight="30dp"
            android:text="@string/Data"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtGiorno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/dd"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/lblbarra1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="5dp"
                android:minHeight="30dp"
                app:layout_constraintEnd_toStartOf="@id/txtMese"
                android:text="@string/slash"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtMese"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:hint="@string/MM" />

            <TextView
                android:id="@+id/lblbarra2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="5dp"
                android:minHeight="30dp"
                app:layout_constraintEnd_toStartOf="@id/txtAnno"
                android:text="@string/slash"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/txtAnno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/yyyy"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/txtOra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/oo"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lblduepunti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="5dp"
                android:minHeight="30dp"
                app:layout_constraintEnd_toStartOf="@id/txtAnno"
                android:text="@string/separatore"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtMinuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/mm"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>