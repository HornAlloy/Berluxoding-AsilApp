<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">


    <LinearLayout
        android:id="@+id/layoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">
        <ImageButton
            android:id="@+id/imgBtnProfilo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:layout_marginStart="130dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/baseline_person_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtProfilo"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginStart="160dp"
            android:text="@string/profilo"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnProfilo"
            tools:ignore="TextSizeCheck" />

        <ImageButton
            android:id="@+id/imgBtnInformativa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:layout_marginStart="130dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/baseline_info_outline_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtInformativa"
            android:layout_width="185dp"
            android:layout_height="35dp"
            android:layout_marginStart="105dp"
            android:text="@string/sezione_informativa"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnInformativa"
            tools:ignore="TextSizeCheck" />

        <ImageButton
            android:id="@+id/imgBtnMedBox"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:layout_marginStart="130dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/baseline_add_box_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtMedBox"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginStart="105dp"
            android:text="@string/connessione_medbox"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            tools:ignore="TextSizeCheck" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>