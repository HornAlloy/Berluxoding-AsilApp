<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".controller.HomeActivity">


    <LinearLayout
        android:id="@+id/layoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/imgBtnProfilo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/baseline_person_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txtProfilo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="154dp"
            android:text="@string/profilo"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnProfilo"
            tools:ignore="TextSizeCheck" />

        <ImageButton
            android:id="@+id/imgBtnInformativa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/baseline_info_outline_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txtInformativa"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="128dp"
            android:text="Informazioni"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnInformativa"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/imgBtnMedBox"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/baseline_add_box_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txtMedBox"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="90dp"
            android:text="@string/connessione_medbox"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnMedBox"
            android:textColor="@color/black"
            tools:ignore="ObsoleteLayoutParam,TextSizeCheck" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>